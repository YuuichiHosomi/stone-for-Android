<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#000000"
	android:stretchColumns="1">

<TableRow>
	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_span="1" android:layout_weight="1">
		<EditText android:id="@+id/EditText01"
			android:text=""
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="top|left"
			android:imeOptions="actionNone"
			android:lines="4"
			android:minLines="4"
			android:typeface="monospace"
			android:hint="(parameters)"
			android:inputType="textMultiLine"
			android:editable="true">
		</EditText>
	</ScrollView>
</TableRow>
<TableRow>
	<Button android:id="@+id/ButtonRun"
		android:layout_width="0dip" 
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:text="Run">
	</Button>
	<Button android:id="@+id/ButtonStop"
		android:layout_width="0dip" 
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:text="Stop">
	</Button>
	<Button android:id="@+id/ButtonClear"
		android:layout_width="0dip" 
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:text="Clear">
	</Button>
	<Button android:id="@+id/ButtonHistory"
		android:layout_width="0dip" 
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:text="History">
	</Button>
</TableRow>
<TableRow>
	<ScrollView android:id="@+id/ScrollView02" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:scrollbars="horizontal|vertical"
		android:layout_span="2"
		android:layout_weight="1">
		<TextView android:id="@+id/stonelog"
			android:text=""
			android:layout_width="fill_parent" 
			android:textColor="#FFEEFF"
			android:typeface="monospace" 
			android:layout_weight="1"
			android:singleLine="false"
			android:scrollbars="horizontal|vertical"
			android:scrollHorizontally="false"
			android:layout_height="fill_parent"
			android:background="#000000">
		</TextView>
	</ScrollView>
</TableRow>
</TableLayout>
